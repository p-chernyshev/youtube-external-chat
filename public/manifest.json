{
  "manifest_version": 3,
  "name": "YouTube External Chat",
  "description": "Adds an option to move YouTube live chat into a separate window",
  "version": "1.0.0",
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "all_frames": true
    }
  ]
}
