{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "baseUrl": "./",
    "module": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2020",
  },
  "include": ["src/**/*"]
}
